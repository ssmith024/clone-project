<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function(){
        $('#taxForm').submit(function(event){
            event.preventDefault();
            var income = parseFloat($('#netIncome').val());
            var filingStatus = $('#filingStatus').val();
            var tax = incomeTax(income, filingStatus);
            $('#results').html('<h4>Results</h4><p>Net Income: $' + income.toFixed(2) + '</p><p>' + filingStatus + ': $' + tax.toFixed(2) + '</p>');
        });
        
        function incomeTax(taxableIncome, status) {
            if (status === 'Single') {
                if (taxableIncome <= 9700) {
                    return taxableIncome * 0.10;
                } else if (taxableIncome <= 39475) {
                    return 970 + (taxableIncome - 9700) * 0.12;
                } else if (taxableIncome <= 84200) {
                    return 4543 + (taxableIncome - 39475) * 0.22;
                } else if (taxableIncome <= 160725) {
                    return 14382 + (taxableIncome - 84200) * 0.24;
                } else if (taxableIncome <= 204100) {
                    return 32748 + (taxableIncome - 160725) * 0.32;
                } else if (taxableIncome <= 510300) {
                    return 46628 + (taxableIncome - 204100) * 0.35;
                } else {
                    return 153798 + (taxableIncome - 510300) * 0.37;
                }
            } else if (status === 'Married_Jointly') {
                // Similar logic for Married Jointly filing status
            } else if (status === 'Married_Separately') {
                // Similar logic for Married Separately filing status
            } else if (status === 'Head_Household') {
                // Similar logic for Head of Household filing status
            }
        }     
                break;
                case 'Married_Jointly':
                    // Implement similar logic for Married Jointly filing status
                    if (taxableIncome <= 19400) {
                        tax = taxableIncome * 0.1;
                    } else if (taxableIncome <= 78950) {
                        tax = 1940 + (taxableIncome - 19400) * 0.12;
                    } else if (taxableIncome <= 168400) {
                        tax = 9086 + (taxableIncome - 78950) * 0.22;
                    } else if (taxableIncome <= 321450) {
                        tax = 28765 + (taxableIncome - 168400) * 0.24;
                    } else if (taxableIncome <= 408200) {
                        tax = 65497 + (taxableIncome - 321450) * 0.32;
                    } else if (taxableIncome <= 612350) {
                        tax = 93257 + (taxableIncome - 408200) * 0.35;
                    } else {
                        tax = 164709 + (taxableIncome - 612350) * 0.37;
                    }
                    break;
                case 'Married_Separately':
                    // Implement similar logic for Married Separately filing status
                    if (taxableIncome <= 9700) {
                        tax = taxableIncome * 0.1;
                    } else if (taxableIncome <= 39475) {
                        tax = 970 + (taxableIncome - 9700) * 0.12;
                    } else if (taxableIncome <= 84200) {
                        tax = 4543 + (taxableIncome - 39475) * 0.22;
                    } else if (taxableIncome <= 160725) {
                        tax = 14382.50 + (taxableIncome - 84200) * 0.24;
                    } else if (taxableIncome <= 204100) {
                        tax = 32748.50 + (taxableIncome - 160725) * 0.32;
                    } else if (taxableIncome <= 306175) {
                        tax = 46628.50 + (taxableIncome - 204100) * 0.35;
                    } else {
                        tax = 82137.38 + (taxableIncome - 306175) * 0.37;
                    }
                    break;
                case 'Head_Household':
                    // Implement similar logic for Head of Household filing status
                    if (taxableIncome <= 13850) {
                        tax = taxableIncome * 0.1;
                    } else if (taxableIncome <= 52850) {
                        tax = 1385 + (taxableIncome - 13850) * 0.12;
                    } else if (taxableIncome <= 84200) {
                        tax = 6065 + (taxableIncome - 52850) * 0.22;
                    } else if (taxableIncome <= 160700) {
                        tax = 12962 + (taxableIncome - 84200) * 0.24;
                    } else if (taxableIncome <= 204100) {
                        tax = 31322 + (taxableIncome - 160700) * 0.32;
                    } else if (taxableIncome <= 510300) {
                        tax = 45210 + (taxableIncome - 204100) * 0.35;
                    } else {
                        tax = 152380 + (taxableIncome - 510300) * 0.37;
                    }
                    break;
                default:
                    break;
            }
            return tax;
        }
    });
</script>
